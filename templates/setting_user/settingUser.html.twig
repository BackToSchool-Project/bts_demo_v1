{% extends 'base.html.twig' %}

{% block title %}Hello SettingUserController!{% endblock %}

{% block content %}
    {% include 'commons/_nav.html.twig' with {
        bgColor: "bg-bts-green-500",
        waveStatus: true
    } %}

    <div class="container mx-auto mt-32 border border-red-400">
        {{ form_start(formView) }}
        {{ form_row(formView.firstName) }}
        {{ form_row(formView.lastName) }}
        {{ form_row(formView.email) }}
        {{ form_row(formView.plainPassword, {
            label: 'Mot de passe :'
        }) }}
        {{ form_row(formView.city) }}
        {{ form_row(formView.posteCode) }}
        {#            {{ form_row(registrationForm.agreeTerms) }}#}

        <button type="submit" class="mt-4 py-2 px-4 bg-bts-red-500 hover:bg-bts-red-400 focus:ring-bts-red-300 focus:ring-offset-bts-red-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-full">
            Enregistrer vos modifications
        </button>

        {{ form_end(formView) }}
    </div>

{% endblock %}
