{% extends 'base.html.twig' %}
{% form_theme formUserSettings 'form/_tailwindFormTheme.html.twig' %}

{% block title %}Hello SettingUserController!{% endblock %}

{% block content %}
    {% include 'commons/_nav.html.twig' with {
        bgColor: "bg-bts-red-500",
        waveStatus: true,
        color: 'red'
    } %}

<div class="flex flex-wrap w-full">
    <div class="w-1/2 shadow-2xl">
        <img class="hidden object-cover w-full h-screen md:block" src="{{ asset("build/images/school_2.jpg") }}"/>
    </div>
    <div class="w-full md:w-1/2 mt-32 flex flex-col justify-center sm:px-16">
        <div class="flex flex-col justify-center items-center">
            <h1 class="text-4xl font-extrabold text-center">Gérer les paramètres de votre compte</h1>
        </div>
        <div class="container mt-8">
            {{ form_start(formUserSettings) }}
                {{ form_row(formUserSettings.firstName) }}
                {{ form_row(formUserSettings.lastName) }}
                {{ form_row(formUserSettings.email) }}
                {{ form_row(formUserSettings.plainPassword, {
                    label: 'Mot de passe :'
                }) }}
                {{ form_row(formUserSettings.city) }}
                {{ form_row(formUserSettings.posteCode) }}

            <button type="submit" class="mt-4 py-2 px-4 bg-bts-red-500 hover:bg-bts-red-400 focus:ring-bts-red-300 focus:ring-offset-bts-red-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-full">
                modifier
            </button>
            {{ form_end(formUserSettings) }}
        </div>
    </div>
</div>

{% endblock %}
