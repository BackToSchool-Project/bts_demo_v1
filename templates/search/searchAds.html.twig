{% extends 'base.html.twig' %}
{% block title %}recherche de produits{% endblock %}

{% block content %}
    <div class="container my-24">
        <h1>Liste des annonces :</h1>
        <div class="flex flex-wrap gap-4">
            {% for product in products %}
                <a href="{{ path('show_annonce', {'slug': product.slug}) }}" class="transform transition duration-500 hover:scale-105">
                    <div class="block p-6 rounded-lg shadow-lg bg-white max-w-sm">
                        <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">
                            {{ product.title }}
                        </h5>
                        <p class="text-gray-700 text-base mb-4">
                            {{ product.description }}
                        </p>
                        <span class="bg-info m-2 inline-block rounded-full py-1 px-3 text-sm font-semibold text-white">
                        {{ product.category.name }}
                        </span>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}